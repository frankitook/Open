<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Cargar_proveedores"
    android:orientation="vertical"
    android:background="#F5F1E4"
    android:gravity="center"
    >

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="110dp"
        android:layout_height="107dp"
        app:srcCompat="@drawable/agregarusuario"

        />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:cardCornerRadius="25dp"
        android:layout_marginHorizontal="15dp"


        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:text="Datos del proveedor:"
                android:textColor="#000000"
                android:textSize="20sp"
                android:paddingLeft="20dp"
                android:layout_marginTop="15dp"
                android:gravity="center"

                />

            <EditText
                android:id="@+id/numerotel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:hint="Ingrese Nro.Telefono"
                android:inputType="phone"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            <EditText
                android:id="@+id/nombreprov"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:hint="Ingrese el nombre"
                android:inputType="textPersonName"
                tools:ignore="TouchTargetSizeCheck" />

            <EditText
                android:id="@+id/direccionprov"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:layout_marginBottom="20dp"
                android:hint="Ingrese la direccion"
                android:inputType="textPersonName"
                tools:ignore="TouchTargetSizeCheck" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/importar"
        android:layout_width="263dp"
        android:layout_height="67dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="Importar contacto"
        app:icon="@drawable/ic_baseline_import_export_24"
        app:iconPadding="0dp" />

    <Button
        android:id="@+id/boton5"
        android:layout_width="263dp"
        android:layout_height="67dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:backgroundTint="#4CAF50"
        android:text="AÃ±adir contacto"
        app:icon="@drawable/ic_baseline_add_24"
        app:iconPadding="0dp" />


</LinearLayout>