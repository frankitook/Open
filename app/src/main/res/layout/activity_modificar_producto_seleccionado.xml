<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ModificarProductoSeleccionado"
    android:background="#F5F1E4"
    android:gravity="center"
    android:orientation="vertical"
    >


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="25dp"

        android:layout_marginHorizontal="15dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView89"
                android:layout_width="131dp"
                android:layout_height="91dp"
                android:layout_gravity="center_horizontal"
                app:srcCompat="@drawable/prod"
                android:layout_marginTop="20dp"

                />

            <TextView
                android:id="@+id/MPSdescripcion"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/MPSprecio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"                >

                <TextView
                    android:id="@+id/textView28"
                    android:layout_width="103dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Cantidad:"

                    android:textColor="#000000"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/MPScantidad"
                    android:layout_width="129dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:gravity="center"
                    android:inputType="number"
                    tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />
            </LinearLayout>

            <TextView
                android:id="@+id/MPSsa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:textColor="#2196F3"
                android:textSize="16sp" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        >

        <Button
            android:id="@+id/MPSeliminar"
            android:layout_width="183dp"
            android:layout_height="62dp"
            android:layout_marginHorizontal="10dp"
            android:backgroundTint="#FF0000"
            android:text="Eliminar"
            app:icon="@drawable/ic_baseline_delete_24" />

        <Button
            android:id="@+id/MPSactualizar"
            android:layout_width="225dp"
            android:layout_height="62dp"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:backgroundTint="#00BCD4"
            android:text="Actualizar"
            app:icon="@drawable/ic_baseline_wifi_protected_setup_24" />
    </LinearLayout>
</LinearLayout>